@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!Model.Any())
{<p>Sorry, Currently we have no movies in the stock</p>}
else
{
    foreach (var movie in Model)
    {
        <p>  @Html.ActionLink(movie.Name, "Details", "Movies", new { Id = movie.Id }, null)</p>
    }
}
